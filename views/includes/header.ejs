    <style>
        html {
            font-size: 16px;
            /* 1rem = 16px */
        }

        body {
            background-color: #f0f0f0;
            /* Vaalean harmaa väri */
            margin: 0;
            padding: 0;
            font-family: Arial, sans-serif;
            /* Voit valita haluamasi fontin */
        }



        h2 {
            font-size: 16pt;
            margin: 0;
        }

        h3 {
            margin: 5px;
        }

        p {
            font-size: 14pt;
            text-align: left;
            margin: 5px;
        }

        li {
            font-size: 14pt;
        }

        .mdl-list__item {
            height: 30px;
        }

        .mdl-textfield {
            width: 100%;
        }

        .mdl-layout {
            margin-top: 15px;
            margin-left: auto;
            margin-right: auto;
            width: 100%;
            max-width: 1260px;
            align-items: center;
        }

        .mdl-textfield {
            width: 100%;
        }

        .mdl-textfield__input {
            width: 92%;
            border-radius: 5px;
            padding: 15px;
            border: solid 1px lightgrey;
        }

        .mdl-button {
            border-radius: 5px;
            height: 40px;
        }

        .material-icons {
            color: gray;
            width: 40px;
        }

        .HeaderImageDiv {
            position: relative;
            width: 100%;
            height: auto;
        }

        .HeaderImageDiv img {
            width: 100%;
            height: auto;
        }

        .HeaderImageDiv h1 {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            color: white;
            background-color: rgba(0, 0, 0, 0.5);
            padding: 1rem;
            /* Käytä rem-yksikköä */
            font-size: 2rem;
            /* Peruskoko */
            text-align: center;
            width: 80%;
            /* Varmistaa, että teksti ei mene yli */
        }

        .footerImageDiv {
            position: relative;
            text-align: center;
        }

        .footerImageDiv img {
            width: 100%;
            height: auto;
            margin-bottom: 10px;
        }

        .mainPageBlock {
            width: 100%;
            min-height: 600px;
            margin: 10px;
            padding: 25px;
            background-color: rgb(218, 212, 212);
            display: flex;
            flex-direction: column;
        }

        .buttonDiv {
            align-items: center;
            display: flex;
            flex-direction: row;
            background-color: rgb(218, 212, 212);
            margin: 5px;
            padding: 5px;
        }

        .firstContent {
            width: 98%;
            margin: 5px;
            border: 1px solid black;
            padding: 5px;
            height: 465px;
            columns: 2;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            background-color: rgb(218, 212, 212);
        }

        .firstContent img {

            order: 2;
            align-self: flex-end;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-top: 20px;
        }

        .aboutMe {
            display: flex;
            flex-direction: column;
            width: 60%;
            order: 1;
            align-self: flex-start;
            height: 100%;
            background-color: rgb(218, 212, 212);
        }

        .secondContent {
            width: 98%;
            margin: 5px;
            margin-top: 20px;
            padding: 5px;
            height: 465px;
            border: 1px solid black;
            columns: 3;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            background-color: rgb(218, 212, 212);

        }

        .devices {
            display: flex;
            flex-direction: column;
            float: inline-start;
            width: 60%;
            order: 2;
            align-self: center;
            height: 100%;
            background-color: rgb(218, 212, 212);
        }

        .brod1 {
            order: 1;
            align-self: flex-end;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-right: 5px;
        }

        .brod2 {
            order: 3;
            align-self: flex-end;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-right: 5px;
        }

        .thirdContent {
            width: 98;
            margin: 5px;
            margin-top: 20px;
            padding: 5px;
            height: 465px;
            columns: 3;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            border: 1px solid black;
            background-color: rgb(218, 212, 212);
        }

        .parts {
            display: flex;
            flex-direction: column;
            float: inline-start;
            width: 60%;
            order: 2;
            align-self: center;
            height: 100%;
            background-color: rgb(218, 212, 212);
        }

        .sparePart1 {
            order: 1;
            align-self: flex-start;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-right: 5px;
        }

        .sparePart2 {
            order: 3;
            align-self: flex-end;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-right: 5px;
        }

        .fourthContent {
            width: 98%;
            margin: 5px;
            padding: 5px;
            margin-top: 20px;
            height: 665px;
            columns: 2;
            display: flex;
            flex-direction: row;
            align-items: center;
            justify-content: space-around;
            border: 1px solid black;
            background-color: rgb(218, 212, 212);
        }

        .mahcine {

            order: 2;
            align-self: flex-end;
            max-width: 100%;
            width: 40%;
            height: auto;
            margin: 5px;
            margin-right: 5px;
        }

        .sparePart3 {
            display: flex;
            float: inline-start;
            width: 60%;
            order: 1;
            align-self: flex-start;
            height: 100%;
            background-color: blueviolet;
        }

        .contact_us {
            width: 100%;
            height: auto;
            align-items: center;
        }

        .contact_us_first_Block {
            background-color: #f0f0f0;
            font-size: 24px;
            margin: 5px;
            padding: 5px;
        }

        .contact_us_second_Block {
            background-color: #f0f0f0;
            font-size: 24px;
            margin: 5px;
            padding: 5px;
        }

        .contact_us_form_Block {
            background-color: #f0f0f0;
            width: 97%;
            font-size: 24px;
            margin: 5px;
            padding: 5px;
        }

        .contact_us_name_div {
            width: 100%;
            border: 1px solid black;
            justify-content: center;
            padding: 2px;
            margin: 5px;
        }
        .contact_us_label{
            width:90%;
        }
        .google_captcha_div{
            width: 98%;
            border: 1px solid black;
            justify-content: center;
            padding: 10px;
            margin: 5px;
        }

