            }

            .fourthContent {
                padding: 10px;
                width: 98%;
                display: flex;
                flex-direction: column;
                align-items: flex-start;
                height: 1300px;
                margin: 5px;
            }

            .mahcine {

                position: relative;
                width: 98%;
                height: auto;
                margin: 5px;
            }

            .sparePart3 {
                position: relative;
                width: 98%;
                height: auto;
                margin: 5px;
            }

            .g-recaptcha {
                margin: 20px 0;
                width: 100%;
                max-width: 400px;
                /* Voit säätää tätä arvoa tarpeen mukaan */
            }
        }

        @media (max-width: 480px) {
            .HeaderImageDiv h1 {
                font-size: 1.2rem;
                /* Pienempi fonttikoko mobiililaitteille */
                width: 95%;
                /* Lisää tilaa tekstiä varten */
            }
        }
    </style>
